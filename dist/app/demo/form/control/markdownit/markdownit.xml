<form title="Markdownit" width="500" height="450" padding="10">
    <layout gutter="10" direction="v" style="flex: 1; width: 0;">
        <label>Length: {{html.length}}</label>
        <layout gutter="10" style="flex: 1; height: 0;">
            <!-- markdown -->
            <layout direction="v" gutter="10" style="flex: 1;">
                <label>Markdown:</label>
                <text v-model="md" type="multi" style="flex: 1;"></text>
            </layout>
            <!-- html -->
            <layout direction="v" gutter="10" style="flex: 1;">
                <label>Html:</label>
                <text v-model="html" type="multi" style="flex: 1;" readonly></text>
            </layout>
        </layout>
        <markdownit v-model="html" :text="md" style="flex: 1; height: 0;"></markdownit>
        <layout gutter="10">
            <button @click="md = text1" style="flex: 1;">Text 1</button>
            <button @click="md = text2" style="flex: 1;">Text 2</button>
        </layout>
    </layout>
</form>