<form width="300" height="500" title="Img">
    <overflow flex="1" direction="v">
        <layout direction="v" gutter="10" style="padding: 10px;">
            <label>Load "../../../res/img.jpg":</label>
            <img src="../../../res/img.jpg" width="200" height="200" />
            <label>Mode auto:</label>
            <img src="../../../res/img.jpg" width="200" height="200" mode="auto" />
            <label>Mode cover:</label>
            <img src="../../../res/img.jpg" width="200" height="250" mode="cover" />
            <label>Mode contain:</label>
            <img src="../../../res/img.jpg" width="200" height="250" mode="contain" style="border: dotted 1px rgba(0, 0, 0, .5);" />
            <label>You can also use http://, https:// and data: url, load "https://nodejs.org/static/images/logo.svg":</label>
            <img src="https://nodejs.org/static/images/logo.svg" width="122" height="75" style="background-color: #333;" />
        </layout>
    </overflow>
</form>