<form width="300" height="500" title="Tip">
    <layout direction="v" gutter="10" style="flex: 1; padding: 10px;">
        <tip label="ok">
            <button>123</button>
        </tip>
        <tip label="Click me">
            <button>456</button>
        </tip>
        <tip v-if="!change" label="Click me">
            <button>789</button>
        </tip>
        <label v-else>no tip</label>
        <tip label="This is a select">
            <select :data="[1,2,3,4]"></select>
        </tip>
        <tip label="This is so long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long long">
            <label>So long</label>
        </tip>
        <tip label="link tip">
            <link>456</link>
        </tip>
        <layout gutter="5" align-v="center">
            <label>Right</label>
            <tip label="This is right">
                <svg src="../../../res/icon.svg" style="width: 16px; height: 16px;" />
            </tip>
        </layout>
        <tip>
            <template v-slot:content>
                <layout direction="v" gutter="5">
                    <label style="text-align: center;">Label</label>
                    <layout gutter="5">
                        <label style="color: red;">Label2</label>
                        <label>Label3</label>
                    </layout>
                </layout>
            </template>
            <button>789</button>
        </tip>
        <button @click="change = !change">{{change ? '' : '!'}}change</button>
    </layout>
</form>