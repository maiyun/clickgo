<form title="Scroll" width="400" min-width="300" height="400" min-height="390" padding="10">
    <layout flex="1" gutter="10" direction="v">
        <layout flex="1" gutter="10">
            <layout flex="1" gutter="10" direction="v">
                <label>Scroll offset: {{so}}</label>
                <button @tap="l = (l === 1000 ? 2000 : 1000)">Set length = {{l === 1000 ? '2000' : '1000'}}</button>
                <button @tap="c = (c === 100 ? 200 : 100)">Set client = {{c === 100 ? '200' : '100'}}</button>
            </layout>
            <scroll width="20" :length="l" :client="c" v-model:scroll-offset="so"></scroll>
            <scroll width="30" scroll-offset="200"></scroll>
            <scroll width="30"></scroll>
        </layout>
        <scroll direction="h" height="30"></scroll>
        <layout flex="1" style="border: solid 1px rgba(0, 0, 0, .3); background: #FFF;">
            <overflow v-model:scroll-top="so2" flex="1" direction="v" @resize="c2 = $event" @change="l2 = $event" style="line-height: 1.5;">
                <block style="padding: 10px;">
                    <block>Length: {{l2}}, Client: {{c2}}.</block>
                    <block v-for="line of count">Line {{line}}.</block>
                </block>
            </overflow>
            <scroll width="20" :length="l2" :client="c2" v-model:scroll-offset="so2" :float="float"></scroll>
        </layout>
        <layout gutter="10" align-v="center">
            <label flex="1">On the left is the overflow control.</label>
            <button @tap="float = float ? false : true" style="padding: 0 10px;">Set float</button>
            <button @tap="count += 10" style="padding: 0 10px;">Add 10 lines</button>
        </layout>
    </layout>
</form>