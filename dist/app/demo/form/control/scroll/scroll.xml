<form title="Scroll" width="400" min-width="300" height="400" min-height="390" padding="10" background="#FFF">
    <layout flex="1" gutter="10" direction="v">
        <layout flex="1" gutter="10">
            <layout flex="1" gutter="10" direction="v">
                <label>Scroll offset: {{so}}</label>
                <layout gutter="10">
                    <button flex="1" @tap="l = (l === 1000 ? 2000 : 1000)">Set length {{l === 1000 ? '2000' : '1000'}}</button>
                    <button flex="1" @tap="c = (c === 100 ? 200 : 100)">Set client {{c === 100 ? '200' : '100'}}</button>
                </layout>
                <button @tap="disabled = !disabled">{{disabled ? 'Remove' : 'Set'}} disabled</button>
            </layout>
            <scroll width="20" :length="l" :client="c" v-model:scroll-offset="so" :disabled="disabled"></scroll>
            <scroll width="30" scroll-offset="200" :disabled="disabled"></scroll>
            <scroll width="30" :disabled="disabled"></scroll>
        </layout>
        <scroll direction="h" height="30" :disabled="disabled"></scroll>
        <layout flex="1" direction="v" style="border: solid 1px rgba(0, 0, 0, .3); background: #FFF;">
            <layout flex="1">
                <overflow v-model:scroll-top="so2" flex="1" direction="v" @resize="c2 = $event" @change="l2 = $event" style="line-height: 1.5;">
                    <block style="padding: 10px;">
                        <block>Length: {{l2}}, Client: {{c2}}.</block>
                        <block v-for="line of count">Line {{line}}.</block>
                    </block>
                </overflow>
                <scroll width="20" :length="l2" :client="c2" v-model:scroll-offset="so2" :plain="plain" :disabled="disabled"></scroll>
            </layout>
            <layout>
                <scroll direction="h" height="20" length="100" client="100" :plain="plain" :disabled="disabled" flex="1"></scroll>
                <block :style="{'width': (plain ? '10' : '20') + 'px'}" style="background: hsl(205, 0%, 95%);"></block>
            </layout>
        </layout>
        <layout gutter="10" align-v="center">
            <label flex="1">On the left is the overflow control.</label>
            <button @tap="plain = !plain" style="padding: 0 10px;">{{plain ? 'Remove' : 'Set'}} plain</button>
            <button @tap="count += 10" style="padding: 0 10px;">Add 10 lines</button>
        </layout>
    </layout>
</form>