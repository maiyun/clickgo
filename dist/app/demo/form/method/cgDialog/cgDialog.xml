<form width="400" height="450" title="cgDialog" padding="10">
    <layout gutter="10" direction="v" style="flex: 1; width: 0;">
        <label>Result: {{result}}.</label>
        <button @click="dialog('Hello world!')" style="height: 30px;">Normal</button>
        <button @click="dialog('longlonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglonglong')" style="height: 30px;">Long</button>
        <button @click="dialog({ 'title': 'Title', 'content': 'Hello world!' })" style="height: 30px;">Has title</button>
        <button @click="dialog({ 'content': 'Hello world!', 'buttons': ['A', 'B', 'C'] })" style="height: 30px;">Custom buttons</button>
        <button @click="donot" style="height: 30px;">Do not close</button>
        <button @click="confirm(false)" style="height: 30px;">Confirm</button>
        <button @click="confirm(true)" style="height: 30px;">Confirm has cancel</button>
    </layout>
</form>