<form width="300" height="350" title="Library form" padding="10">
    <layout gutter="10" direction="v" flex="1">
        <button @tap="getAvailArea">form.getAvailArea()</button>
        <button @tap="getList">form.getList({{taskId}})</button>
        <layout gutter="10">
            <text v-model="fid" flex="1"></text>
            <button @tap="changeFocus(fid)" width="150">form.changeFocus({{fid}})</button>
        </layout>
        <button @tap="cgDialog(getMaxZIndexFormID())">form.getMaxZIndexFormID()</button>
        <button @tap="showCircular">form.showCircular(x, y)</button>
        <button @tap="showRectangle">form.showRectangle(x, y, 't')</button>
        <layout gutter="10">
            <select v-model="type" :data="['primary', 'info', 'warning', 'danger']" flex="1"></select>
            <button @tap="notify" style="padding: 0 10px;">notify()</button>
        </layout>
    </layout>
</form>