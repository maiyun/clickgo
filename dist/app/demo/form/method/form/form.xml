<form width="350" height="400" title="Library form" padding="10">
    <layout gutter="10" direction="v" style="flex: 1; width: 0;">
        <button @click="getAvailArea">form.getAvailArea()</button>
        <button @click="getList">form.getList({{taskId}})</button>
        <layout gutter="10">
            <text v-model="fid" style="flex: 1; width: 0; height: 30px;"></text>
            <button @click="changeFocus(fid)" style="padding: 0 10px;">form.changeFocus({{fid}})</button>
        </layout>
        <button @click="cgDialog(getMaxZIndexFormID())">form.getMaxZIndexFormID()</button>
        <button @click="showCircular">form.showCircular(x, y)</button>
        <button @click="showRectangle">form.showRectangle(x, y, 't')</button>
        <button @click="send">Send {'x': 'yes'} to self.</button>
        <layout gutter="10">
            <select v-model="type" :data="['primary', 'info', 'warning', 'danger']"></select>
            <select v-model="progress" :data="['normal', 'progress + icon']" style="flex: 1; width: 0;"></select>
            <button @click="notify" style="padding: 0 10px;">notify()</button>
        </layout>
    </layout>
</form>