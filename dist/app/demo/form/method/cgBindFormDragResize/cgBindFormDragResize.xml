<form width="300" height="300" title="cgBindFormDrag / Resize">
    <layout align-v="center" align-h="center" flex="1" direction="v" gutter="10">
        <label @down="cgBindFormDrag" style="padding: 20px; background: rgba(0, 0, 0, .1);">Drag the window by me</label>
        <label @down="cgBindFormResize($event, 'rb')" style="padding: 20px; background: rgba(0, 0, 0, .1); cursor: se-resize;">Resize the window by me</label>
    </layout>
</form>