<form width="350" height="500" title="Library theme" padding="10">
    <layout direction="v" gutter="10" style="flex: 1;">
        <button @click="load">Load "/clickgo/theme/dark.cgt"</button>
        <button @click="remove">remove('dark')</button>
        <button @click="clear">clear()</button>
        <button @click="setGlobal('light')">setGlobal "/clickgo/theme/light.cgt"</button>
        <button @click="setGlobal('dark')">setGlobal "/clickgo/theme/dark.cgt"</button>
        <button @click="setGlobalFromFile('/clickgo/theme/dark')">setGlobalFromFile("/clickgo/theme/dark")</button>
        <button @click="clearGlobal">clearGlobal()</button>
        <button @click="setMain('oklch(.65 .23 28)')" type="cg">setMain('oklch(.65 .23 28)')</button>
        <button @click="setMain()" type="cg">setMain()</button>
    </layout>
</form>