<form width="400" height="500" title="cgLocal">
    <overflow direction="v" style="padding: 10px; flex: 1; width: 0;">
        <layout gutter="10" direction="v">
            <label>Now local: {{cgLocal}}, Global local: {{globalLocal}}</label>
            <label>File name: {{l('File name')}}</label>
            <label>File size: {{l('File size')}}</label>
            <button @click="cgLoadLocal('en', 'test1')" style="height: 30px;">cgLoadLocal('en', 'test1')</button>
            <button @click="cgLoadLocal('sc', 'test2')" style="height: 30px;">cgLoadLocal('sc', 'test2')</button>
            <button @click="cgSetLocal('sc', 'test2')" style="height: 30px;">cgSetLocal('sc', 'test2')</button>
            <button @click="cgClearLocal" style="height: 30px;">cgClearLocal</button>
            <button @click="cgLoadLocalData('en', {'File size': 'File size'})" style="height: 30px;">cgLoadLocalData('en', {'File size': 'File size'})</button>
            <button @click="cgLoadLocalData('sc', {'File size': '文件大小'})" style="height: 30px;">cgLoadLocalData('sc', {'File size': '文件大小'})</button>
            <label>Change local name:</label>
            <button @click="cgSetLocalName('en')" style="height: 30px;">cgSetLocalName('en')</button>
            <button @click="cgSetLocalName('sc')" style="height: 30px;">cgSetLocalName('sc')</button>
            <button @click="cgClearLocalName()" style="height: 30px;">cgClearLocalName()</button>
            <label>Change global local name:</label>
            <layout gutter="10">
                <select v-model="select" :data="['sc', 'tc', 'en', 'ja']" style="flex: 1; width: 0;"></select>
                <button @click="change" style="padding: 0 10px; height: 30px;">Change</button>
            </layout>
        </layout>
    </overflow>
</form>