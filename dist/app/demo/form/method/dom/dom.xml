<form width="400" height="450" title="Library dom" padding="10">
    <layout gutter="10" direction="v" flex="1">
        <button @tap="setGlobalCursor('wait')">dom.setGlobalCursor('wait')</button>
        <button @tap="setGlobalCursor()">dom.setGlobalCursor()</button>
