<form width="400" height="500" title="cgLocale">
    <overflow direction="v" style="padding: 10px; flex: 1; width: 0;">
        <layout gutter="10" direction="v">
            <label>Now locale: {{cgLocale}}, Global locale: {{globalLocale}}</label>
            <label>File name: {{l('File name')}}</label>
            <label>File size: {{l('File size')}}</label>
            <button @click="cgLoadLocale('en', 'test1')" style="height: 30px;">cgLoadLocale('en', 'test1')</button>
            <button @click="cgLoadLocale('sc', 'test2')" style="height: 30px;">cgLoadLocale('sc', 'test2')</button>
            <button @click="cgSetLocale('sc', 'test2')" style="height: 30px;">cgSetLocale('sc', 'test2')</button>
            <button @click="cgClearLocale" style="height: 30px;">cgClearLocale</button>
            <button @click="cgLoadLocaleData('en', {'File size': 'File size'})" style="height: 30px;">cgLoadLocaleData('en', {'File size': 'File size'})</button>
            <button @click="cgLoadLocaleData('sc', {'File size': '文件大小'})" style="height: 30px;">cgLoadLocaleData('sc', {'File size': '文件大小'})</button>
            <label>Change locale name:</label>
            <button @click="cgSetLocaleName('en')" style="height: 30px;">cgSetLocaleName('en')</button>
            <button @click="cgSetLocaleName('sc')" style="height: 30px;">cgSetLocaleName('sc')</button>
            <button @click="cgClearLocaleName()" style="height: 30px;">cgClearLocaleName()</button>
            <label>Change global locale name:</label>
            <layout gutter="10">
                <select v-model="select" :data="['sc', 'tc', 'en', 'ja']" style="flex: 1; width: 0;"></select>
                <button @click="change" style="padding: 0 10px; height: 30px;">Change</button>
            </layout>
        </layout>
    </overflow>
</form>