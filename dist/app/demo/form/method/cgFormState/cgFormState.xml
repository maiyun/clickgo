<form width="300" height="300" title="cgFormState" v-model:state-max="max" v-model:state-min="min">
    <layout align-v="center" align-h="center" direction="v" gutter="10" style="flex: 1; width: 0;">
        <label>state-max: {{max}}, state-min: {{min}}.</label>
        <layout gutter="10">
            <button @click="max = !max" style="height: 30px; padding: 0 10px;">Set max to {{max ? 'false' : 'true'}}</button>
            <button @click="cgMax" style="height: 30px; padding: 0 10px;">cgMax()</button>
        </layout>
        <layout gutter="10">
            <button @click="min = !min" style="height: 30px; padding: 0 10px;">Set min to {{min ? 'false' : 'true'}}</button>
            <button @click="cgMin" style="height: 30px; padding: 0 10px;">cgMin()</button>
        </layout>
        <button @click="cgClose" style="height: 30px; padding: 0 10px;">Click me to close the form</button>
    </layout>
</form>