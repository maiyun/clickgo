<form width="300" height="300" title="cgFormState" v-model:state-max="max" v-model:state-min="min">
    <layout align-v="center" align-h="center" flex="1" direction="v" gutter="10">
        <label>state-max: {{max}}, state-min: {{min}}.</label>
        <layout gutter="10">
            <button @tap="max = !max" style="padding: 0 10px;">Set max to {{max ? 'false' : 'true'}}</button>
            <button @tap="cgMax" style="padding: 0 10px;">cgMax()</button>
        </layout>
        <layout gutter="10">
            <button @tap="min = !min" style="padding: 0 10px;">Set min to {{min ? 'false' : 'true'}}</button>
            <button @tap="cgMin" style="padding: 0 10px;">cgMin()</button>
        </layout>
        <button @tap="cgClose" style="padding: 0 10px;">Click me to close the form</button>
    </layout>
</form>