{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        // "outDir": "dist/",
        "sourceMap": false,
        "target": "ES2021",
        "strict": true,             // 严格模式
        "declaration": true,       // d.ts
        "declarationMap": false,
        "newLine": "LF",
        "paths": {
            "~/*": ["./*"],
            "~c/*": ["./dist/app/demo/form/control/*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}