{
    "compilerOptions": {
        "module": "esnext",
        "removeComments": false,
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        // "outDir": "dist/",
        "sourceMap": false,
        "target": "ES2022",
        "strict": true,             // 严格模式
        "declaration": true,        // d.ts
        "declarationMap": false,
        "newLine": "LF",
        "paths": {
            "~/*": ["./*"]
        },
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}