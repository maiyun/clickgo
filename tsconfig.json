{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        // "outDir": "dist/",
        "sourceMap": false,
        "target": "ES2015",
        "strict": true,             // 严格模式
        "declaration": false,       // d.ts
        "declarationMap": false,
        "newLine": "LF",
        "paths": {
            "~/*": ["./*"],
            "~c/*": ["./dist/app/demo/form/control/*"]
        },
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@litert/loader"
        ],
        "esModuleInterop": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}